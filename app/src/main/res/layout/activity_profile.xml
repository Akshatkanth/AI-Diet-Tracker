<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="52dp"
        android:paddingBottom="40dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI DIET TRACKER"
            android:textColor="@color/orange_primary"
            android:textSize="12sp"
            android:letterSpacing="0.15"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Your Profile"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Tell us about yourself so we can build your perfect diet plan"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Avatar / Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:background="@drawable/bg_orange_circle"
                android:gravity="center"
                android:text="ðŸ‘¤"
                android:textSize="40sp" />
        </LinearLayout>

        <!-- SECTION: Basic Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸ“‹  Basic Information"
            android:textColor="@color/orange_primary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_card"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                app:boxBackgroundColor="@color/dark_surface"
                app:boxStrokeColor="@color/orange_primary"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/text_secondary"
                app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                app:startIconTint="@color/orange_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Age -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Age (years)"
                app:boxBackgroundColor="@color/dark_surface"
                app:boxStrokeColor="@color/orange_primary"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/text_secondary"
                app:startIconDrawable="@android:drawable/ic_menu_recent_history"
                app:startIconTint="@color/orange_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gender Row -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="Gender"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <RadioGroup
                android:id="@+id/radio_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center"
                    android:text="â™‚  Male"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center"
                    android:text="â™€  Female"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </RadioGroup>

        </LinearLayout>

        <!-- SECTION: Body Metrics -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="âš–ï¸  Body Metrics"
            android:textColor="@color/orange_primary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_card"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Height + Weight row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Height (cm)"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:boxStrokeColor="@color/orange_primary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:hint="Weight (kg)"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:boxStrokeColor="@color/orange_primary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Target Weight -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Target Weight (kg)"
                app:boxBackgroundColor="@color/dark_surface"
                app:boxStrokeColor="@color/orange_primary"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/text_secondary"
                app:startIconDrawable="@android:drawable/ic_menu_directions"
                app:startIconTint="@color/orange_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_target_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- SECTION: Lifestyle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸƒ  Lifestyle"
            android:textColor="@color/orange_primary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_card"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Activity Level -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Activity Level"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <RadioGroup
                android:id="@+id/radio_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_sedentary"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="ðŸª‘  Sedentary (little or no exercise)"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_light"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="ðŸš¶  Lightly Active (1â€“3 days/week)"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_moderate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="ðŸ‹ï¸  Moderately Active (3â€“5 days/week)"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_very_active"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="ðŸ”¥  Very Active (6â€“7 days/week)"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </RadioGroup></LinearLayout>

        <!-- SECTION: Your Goal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸŽ¯  Your Goal"
            android:textColor="@color/orange_primary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_card"
            android:orientation="vertical"
            android:padding="20dp">

            <RadioGroup
                android:id="@+id/radio_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_lose"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="ðŸ“‰  Lose Weight"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

                <RadioButton
                    android:id="@+id/radio_maintain"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="âš–ï¸  Maintain Weight"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

                <RadioButton
                    android:id="@+id/radio_gain"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="ðŸ“ˆ  Gain Muscle"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />
            </RadioGroup>

        </LinearLayout>

        <!-- SECTION: Diet Preferences -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸ¥—  Diet Preferences"
            android:textColor="@color/orange_primary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_card"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Diet Type (e.g. Vegan, Keto, Balanced)"
                app:boxBackgroundColor="@color/dark_surface"
                app:boxStrokeColor="@color/orange_primary"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/text_secondary"
                app:startIconDrawable="@android:drawable/ic_menu_gallery"
                app:startIconTint="@color/orange_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_diet_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Food Allergies or Restrictions"
                app:boxBackgroundColor="@color/dark_surface"
                app:boxStrokeColor="@color/orange_primary"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/text_secondary"
                app:startIconDrawable="@android:drawable/ic_dialog_alert"
                app:startIconTint="@color/orange_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_allergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Daily Water Goal (glasses)"
                app:boxBackgroundColor="@color/dark_surface"
                app:boxStrokeColor="@color/orange_primary"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/text_secondary"
                app:startIconDrawable="@android:drawable/ic_menu_compass"
                app:startIconTint="@color/orange_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_water_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_profile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/orange_primary"
            android:fontFamily="sans-serif-medium"
            android:text="Save Profile"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Your data is private and used only to personalize your diet plan"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
