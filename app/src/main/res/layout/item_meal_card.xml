<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_glass_card"
    android:padding="16dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_meal_type_emoji"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:text="ðŸ½ï¸"
        android:textSize="22sp"
        android:gravity="center"
        android:background="@drawable/bg_icon_circle"
        android:layout_marginEnd="14dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tv_meal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast â€¢ 8:00 AM"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_meal_macros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P: 0g  C: 0g  F: 0g"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:layout_marginTop="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tv_meal_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 kcal"
            android:textColor="@color/orange_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif-bold"
            android:gravity="end" />

        <ImageButton
            android:id="@+id/btn_delete_meal"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/transparent"
            android:tint="@color/text_secondary"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</LinearLayout>
