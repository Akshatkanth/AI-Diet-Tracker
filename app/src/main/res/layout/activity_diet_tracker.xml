<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Tracker"
                    android:textColor="@color/text_primary"
                    android:textSize="32sp"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today, Mon 1 Jan"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ 0 days"
                android:textColor="@color/orange_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-bold"
                android:background="@drawable/bg_glass_card"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>

        <!-- Calorie Ring Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_orange_card"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CALORIES TODAY"
                        android:textColor="#99FFFFFF"
                        android:textSize="11sp"
                        android:letterSpacing="0.12" />

                    <!-- FIXED: changed gravity from "baseline" to "bottom" -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tv_calories_consumed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="48sp"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:id="@+id/tv_calories_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / 2000 kcal"
                            android:textColor="#CCFFFFFF"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_calories_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000 kcal remaining"
                        android:textColor="#CCFFFFFF"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Circular Progress -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ProgressBar
                        android:id="@+id/progress_calories"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:progress="0"
                        android:max="100"
                        android:rotation="-90"
                        android:progressDrawable="@drawable/circular_progress"
                        android:background="@drawable/circular_progress_bg" />

                    <TextView
                        android:id="@+id/tv_calories_percent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0%"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-bold"
                        android:gravity="center" />
                </FrameLayout>
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar_calories"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"
                android:progressDrawable="@drawable/progress_bar_white"
                android:background="@drawable/progress_bar_bg_white"
                android:progress="0"
                android:max="100" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp" />

            <!-- Macros Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_protein_consumed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textColor="#CCFFFFFF"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                    <ProgressBar
                        android:id="@+id/progress_protein"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="48dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progress_bar_white"
                        android:background="@drawable/progress_bar_bg_white"
                        android:progress="0"
                        android:max="100" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#33FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_carbs_consumed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:textColor="#CCFFFFFF"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                    <ProgressBar
                        android:id="@+id/progress_carbs"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="48dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progress_bar_white"
                        android:background="@drawable/progress_bar_bg_white"
                        android:progress="0"
                        android:max="100" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#33FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_fat_consumed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textColor="#CCFFFFFF"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                    <ProgressBar
                        android:id="@+id/progress_fat"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="48dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="6dp"
                        android:progressDrawable="@drawable/progress_bar_white"
                        android:background="@drawable/progress_bar_bg_white"
                        android:progress="0"
                        android:max="100" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Quick Add Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quick Add"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-bold" />
        </LinearLayout>

        <!-- Quick Add Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_glass_card"
            android:padding="20dp">

            <!-- Meal Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meal name (e.g. Oats, Chicken Rice)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/OrangeInputTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_meal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Macro Inputs Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:hint="Calories"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/OrangeInputTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_calories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:hint="Protein (g)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/OrangeInputTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_protein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Macro Inputs Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:hint="Carbs (g)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/OrangeInputTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_carbs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:hint="Fat (g)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/OrangeInputTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Meal Type Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/chip_group_meal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">

                    <!-- FIXED: replaced @color/chip_selector with hardcoded color -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ… Breakfast"
                        android:textColor="@color/text_primary"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="#1AFF6B00"
                        app:chipStrokeColor="@color/orange_primary"
                        app:chipStrokeWidth="1dp"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸ Lunch"
                        android:textColor="@color/text_primary"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="#1AFF6B00"
                        app:chipStrokeColor="@color/orange_primary"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ™ Dinner"
                        android:textColor="@color/text_primary"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="#1AFF6B00"
                        app:chipStrokeColor="@color/orange_primary"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_snack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ Snack"
                        android:textColor="@color/text_primary"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="#1AFF6B00"
                        app:chipStrokeColor="@color/orange_primary"
                        app:chipStrokeWidth="1dp" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btn_add_meal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="+ Log Meal"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-bold"
                android:backgroundTint="@color/orange_primary"
                android:textColor="#FFFFFF"
                app:cornerRadius="14dp" />
        </LinearLayout>

        <!-- Today's Log Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today's Log"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-bold" />

            <TextView
                android:id="@+id/tv_meal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 meals"
                android:textColor="@color/orange_primary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_glass_card"
            android:padding="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸"
                android:textSize="48sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No meals logged yet"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use the form above to start tracking"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Meals List Container -->
        <LinearLayout
            android:id="@+id/layout_meals_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:visibility="gone" />

        <!-- Water Tracker Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_glass_card"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§"
                    android:textSize="22sp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Water Intake"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-bold" />

                <TextView
                    android:id="@+id/tv_water_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 8 glasses"
                    android:textColor="@color/orange_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Water Glasses Row -->
            <LinearLayout
                android:id="@+id/layout_water_glasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progress_water"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/progress_bar_orange"
                android:background="@drawable/progress_bar_bg"
                android:progress="0"
                android:max="8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/btn_add_water"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="+ Add Glass"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:backgroundTint="@color/orange_primary"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/btn_remove_water"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="- Remove"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:backgroundTint="#1AFFFFFF"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/orange_primary"
                    app:strokeWidth="1dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Reset Button -->
        <com.google.android.material.button.MaterialButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_reset_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:text="Reset Today's Log"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            android:backgroundTint="#00000000"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp"
            app:cornerRadius="14dp" />

    </LinearLayout>
</ScrollView>
