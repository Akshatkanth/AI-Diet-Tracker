<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.AIDietTracker.Header" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AIDietTracker.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AIDietTracker.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.AIDietTracker.Card.Glass" parent="Widget.Material3.MaterialCardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="strokeColor">@color/surface_card_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Widget.AIDietTracker.Button.Filled" parent="Widget.Material3.Button">
        <item name="cornerRadius">18dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="elevation">4dp</item>
    </style>
</resources>
